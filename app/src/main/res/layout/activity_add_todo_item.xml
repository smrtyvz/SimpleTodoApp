    <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
        android:id="@+id/text_field_boxes1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:labelText="Title"
        android:layout_marginTop="8dp"
        app:secondaryColor="@color/colorLightGray"
        app:primaryColor="@color/colorPurple"
        app:hasClearButton="true"
        >
        <studio.carbonylgroup.textfieldboxes.ExtendedEditText
            android:id="@+id/activity_addTodoItem_edtTxt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

    <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
        android:id="@+id/text_field_boxes2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:secondaryColor="@color/colorLightGray"
        app:primaryColor="@color/colorPurple"
        android:layout_marginTop="8dp"
        app:labelText="Description"
        app:hasClearButton="true"
        >
    <studio.carbonylgroup.textfieldboxes.ExtendedEditText
        android:id="@+id/activity_addTodoItem_edtTxt_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Priority"
            android:textAppearance="@android:style/TextAppearance.Medium" />

        <NumberPicker
            android:id="@+id/activity_addTodoItem_numPckr_priority"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="16dp" />


    </LinearLayout>

</LinearLayout>
